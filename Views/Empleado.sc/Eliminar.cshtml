@{
    ViewBag.Title = "Eliminar";
}

<form class="row justify-content-center">
    <div class="col-12 text-center mt-4">
        <h2>Eliminar Empleado</h2>
        <hr />
    </div>

    <h3 class="text-danger mb-5 text-center">¿Esta seguro que quiere eliminar el empleado?</h3>

    <div class="col-4">
        <label>ID</label>
        <input type="text" class="form-control" id="IdEmpleado" name="IdEmpleado" value="" disabled />
    </div>

    <div class="col-4">
        <label>Digite el Empleado</label>
        <input type="text" class="form-control" id="NombreEmpleado" name="NombreEmpleado" disabled />
    </div>
    <div class="w-100"></div>
    <div class="col-4 mt-3 text-center">
        <button id="btnEliminarEmpleado" class="btn btn-primary">Eliminar</button>
        <a href="/Empleado/index" class="btn btn-danger">Cancelar</a>
    </div>
</form>

@section scripts {
    <script src="~/Scripts/scriptsEmpleados.js"></script>
    <script>
        $(document).ready(function () {
            BuscarEmpleadoPorID();
        });

        $("#btnEliminarEmpleado").click(function () {
            EliminarEmpleado();
            return false;
        });
    </script>

}
