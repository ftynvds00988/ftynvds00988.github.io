@{
    ViewBag.Title = "Modificar";
}

<form class="row justify-content-center">
    <input type="hidden" id="IdEmpleado" value="" />

    <div class="col-12 text-center mt-4">
        <h2>Modificar Empleado</h2>
        <hr />
    </div>

    <div class="col-4">
        <label>Digite el Empleado</label>
        <input type="text" class="form-control" id="NombreEmpleado" name="NombreEmpleado" />
    </div>
    <div class="w-100"></div>
    <div class="col-4 mt-3 text-center">
        <button id="btnActualizarEmpleado" class="btn btn-primary">Actualizar</button>
        <a href="/Empleado/index" class="btn btn-danger">Cancelar</a>
    </div>
</form>


@section scripts {
    <script src="~/Scripts/scriptsEmpleados.js"></script>
    <script>
        $(document).ready(function () {
            BuscarEmpleadoPorID();
        });

        $("#btnActualizarEstado").click(function () {
            ActualizarEmpleado();
            return false;
        });
    </script>
}
	
